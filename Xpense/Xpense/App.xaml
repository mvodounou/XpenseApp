<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xpense.App" xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms">
    <Application.Resources>
        <ResourceDictionary Source="Templates/Colours.xaml"/>
        <ResourceDictionary Source="Templates/MainTemplate.xaml"/> 
        <Style TargetType="Label">
            <Setter Property="TextColor"
                    Value="{StaticResource Black}" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="TextColor"
                    Value="{StaticResource Black}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor"
                    Value="{StaticResource MainColor}" />
            <Setter Property="TextColor"
                    Value="{StaticResource White}" />
            <Setter Property="HeightRequest"
                    Value="50" />
        </Style>
    </Application.Resources>
</prism:PrismApplication>
